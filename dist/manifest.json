{
  "name": "Gitlab code review tool",
  "version": "0.1",
  "manifest_version": 2,
  "permissions": ["tabs", "<all_urls>","storage"],
  "background": { "scripts": ["hot-reload.js"] },
  "content_scripts": [
    {
      "matches": ["https://www.lejuhub.com/*/*/merge_requests/*","https://www.lejuhub.com/*/*/-/merge_requests/*"],
      "run_at": "document_end",
      "js": ["main.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html"
}
